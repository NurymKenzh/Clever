@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaF"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaF"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaF">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaDu"]</label>
                <input id="Du" class="form-control" name="Du" value="@ViewBag.Du" />
            </div>
            @if (ViewBag.F != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaF"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.F" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Du"));
    });
</script>

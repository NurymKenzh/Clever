@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaKd"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaKd"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaKd">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaDf"]</label>
                <input id="Df" class="form-control" name="Df" value="@ViewBag.Df" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaDn"]</label>
                <input id="Dn" class="form-control" name="Dn" value="@ViewBag.Dn" />
            </div>
            @if (ViewBag.Kd != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaKd"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.Kd" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Df"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Dn"));
    });
</script>
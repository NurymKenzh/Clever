@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaVgraf"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaVgraf"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaVgraf">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaPv"]</label>
                <input id="Pv" class="form-control" name="Pv" value="@ViewBag.Pv" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaDv"]</label>
                <input id="Dv" class="form-control" name="Dv" value="@ViewBag.Dv" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaLv"]</label>
                <input id="Lv" class="form-control" name="Lv" value="@ViewBag.Lv" />
            </div>
            @if (ViewBag.Vgraf != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaVgraf"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.Vgraf" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Pv"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Dv"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Lv"));
    });
</script>

@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaUm"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaUm"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaUm">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaV1gvs"]</label>
                <input id="V1gvs" class="form-control" name="V1gvs" value="@ViewBag.V1gvs" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaTdelta"]</label>
                <input id="Tdelta" class="form-control" name="Tdelta" value="@ViewBag.Tdelta" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaH"]</label>
                <input id="H" class="form-control" name="H" value="@ViewBag.H" />
            </div>
            @if (ViewBag.Um != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaUm"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.Um" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("V1gvs"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Tdelta"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("H"));
    });
</script>

@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaPDV"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaPDV"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaPDV">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaPDK"]</label>
                <input id="PDK" class="form-control" name="PDK" value="@ViewBag.PDK" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaH"]</label>
                <input id="H" class="form-control" name="H" value="@ViewBag.H" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaV1gvsov"]</label>
                <input id="V1gvsov" class="form-control" name="V1gvsov" value="@ViewBag.V1gvsov" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaTdelta"]</label>
                <input id="Tdelta" class="form-control" name="Tdelta" value="@ViewBag.Tdelta" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaAstrat"]</label>
                <input id="Astrat" class="form-control" name="Astrat" value="@ViewBag.Astrat" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaFgvs"]</label>
                <input id="Fgvs" class="form-control" name="Fgvs" value="@ViewBag.Fgvs" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaMgvs"]</label>
                <input id="Mgvs" class="form-control" name="Mgvs" value="@ViewBag.Mgvs" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaNgvs"]</label>
                <input id="Ngvs" class="form-control" name="Ngvs" value="@ViewBag.Ngvs" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaEta"]</label>
                <input id="Eta" class="form-control" name="Eta" value="@ViewBag.Eta" />
            </div>
            @if (ViewBag.PDV != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaPDV"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.PDV" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaHrW"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaHrW"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaHrW">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaHc"]</label>
                <input id="Hc" class="form-control" name="Hc" value="@ViewBag.Hc" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaWr"]</label>
                <input id="Wr" class="form-control" name="Wr" value="@ViewBag.Wr" />
            </div>
            @if (ViewBag.HrW != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaHrW"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.HrW" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Hc"));
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Wr"));
    });
</script>
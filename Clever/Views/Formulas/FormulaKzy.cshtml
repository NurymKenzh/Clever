@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaKzy"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaKzy"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaKzy">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaNzy"]</label>
                <input id="Nzy" class="form-control" name="Nzy" value="@ViewBag.Nzy" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaZ"]</label>
                <input id="Z" class="form-control" name="Z" value="@ViewBag.Z" />
            </div>
            @if (ViewBag.Kzy != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaKzy"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.Kzy" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Nzy"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("Z"));
    });
</script>
@using Clever.Controllers
@using Microsoft.Extensions.Localization
@using System.Globalization;
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FormulaGr"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-inputmask/inputmask/inputmask.js"></script>
<h2>@SharedLocalizer["FormulaGr"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FormulaGr">
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaK"]</label>
                <input id="K" class="form-control" name="K" value="@ViewBag.K" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaRor"]</label>
                <select asp-items="ViewBag.GasDensity12" name="RoRGr" class="form-control" id="RoRGr"></select>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["FormulaVrGr"]</label>
                <input id="VrGr" class="form-control" name="VrGr" value="@ViewBag.VrGr" />
            </div>
            @if (ViewBag.Gr != null)
            {
                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["FormulaGr"]</label>
                    <input class="form-control" readonly="readonly" value="@ViewBag.Gr" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Calculate"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("K"));
    });
    $(document).ready(function () {
        Inputmask({
            "mask": "9[9][9][9][9][9][9][9][9]@CultureInfo.CurrentCulture.NumberFormat.NumberDecimalSeparator" + "99999",
            clearMaskOnLostFocus: false,
            "placeholder": "0"
        }).mask(document.getElementById("VrGr"));
    });
</script>
